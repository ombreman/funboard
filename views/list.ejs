    <h1 class="ml-3 my-3">Do List from server</h1>
    <ul class="list-group">
        <% for (let i=0; i < posts.length; i++) { %>
            <li class="list-group-item">
                <h4>To do list : <%= posts[i].title %></h4>
                <p>End date : <%= posts[i].date %></p>
                <button class="delete" date-id="<%= posts[i]._id %>">DELETE!</button>
            </li>
            <% } %>
    </ul>

    <scrip src="https://code.jquery.com/jquery-3.5.1.min.js"></scrip>

    <script>

        $('.delete').click(() => {
            $.ajax({
                method: 'DELETE',
                url: '/delete',
                data: { _id: e.target.dataset.id }
            }).done(( result ) => {
                console.log('Ajax request success!!!')
                $(this).parent('li').fadeOut();
            }).fail(( xhr, code, err ) => {
                console.log('Ajax request failed T_T')
                console.log(xhr, code, err)
            });
        });



    </script>

